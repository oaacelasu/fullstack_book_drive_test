<div class="list-group col-md-6 mb-3">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-primary">Personal Info</span>
    </h4>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">First Name: </h5>
            <small class="mb-0"><%= user.firstName %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Last name: </h5>
            <small class="mb-0"><%= user.lastName %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Age: </h5>
            <small class="mb-0"><%= user.age %></small>
        </div>
    </div>
    <h4 class="d-flex justify-content-between align-items-center mb-3 mt-3 <%= user.appointment ? "visible" : "invisible" %>">
        <span class="text-primary">Appointment</span>
    </h4>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light <%= user.appointment ? "visible" : "invisible" %>">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Date: </h5>
            <small class="mb-0"><%= user.appointment?.date.toLocaleDateString("en-US") ?? "" %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light <%= user.appointment ? "visible" : "invisible" %>">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Time slot: </h5>
            <small class="mb-0"><%= user.appointment?.time ?? "" %></small>
        </div>
    </div>

</div>

