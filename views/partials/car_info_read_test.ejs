<div class="list-group col-md-6 mb-3">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-primary">Car details</span>
    </h4>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Make: </h5>
            <small class="mb-0"><%= user.carDetails.make %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Model: </h5>
            <small class="mb-0"><%= user.carDetails.model %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Year: </h5>
            <small class="mb-0"><%= user.carDetails.year %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Color: </h5>
            <small class="mb-0"><%= user.carDetails.color %></small>
        </div>
    </div>
    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-light">
        <div class="d-flex gap-2 w-100 justify-content-between">
            <h5 class="mb-0 w-30">Plat No: </h5>
            <small class="mb-0"><%= user.carDetails.plateNo %></small>
        </div>
    </div>
</div>
